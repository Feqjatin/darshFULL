@model DeptModel

<div class="row justify-content-center">
    <div class="col-md-4">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="AddDept" method="post" class="text-center">
            <div class="form-floating mb-3" style="font-size:25px;font-weight:bold">Add Department</div>
            <div class="form-floating mb-3">
                <input asp-for="DeptId" class="form-control" placeholder="Department ID" />
                <label asp-for="DeptId"></label>
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="DeptName" class="form-control" placeholder="Department Name" />
                <label asp-for="DeptName"></label>
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Department</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
