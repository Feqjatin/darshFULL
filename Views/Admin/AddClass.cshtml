@model ClassInfoModel

<div class="row justify-content-center">
    <div class="col-md-6">

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="AddClass" method="post" class="border rounded p-4 shadow">

            <h3 class="text-center mb-4">Add Class Information</h3>

            <div class="form-floating mb-3">
                <input asp-for="ClassId" class="form-control" placeholder="Class ID" />
                <label asp-for="ClassId"></label>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ClassName" class="form-control" placeholder="Class Name" />
                <label asp-for="ClassName"></label>
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NoOfGroups" class="form-control" type="number" min="1" placeholder="Number of Groups" />
                <label asp-for="NoOfGroups"></label>
                <span asp-validation-for="NoOfGroups" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DeptId" class="form-label">Select Department</label>
                <select asp-for="DeptId" class="form-select" required>
                    <option value="">-- Select Department --</option>
                    @foreach (var dept in ViewBag.Departments)
                    {
                        <option value="@dept.DeptId">@dept.DeptName</option>
                    }
                </select>
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Class</button>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
