
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1 style="text-align:center">@ViewData["Title"]</h1>
        <div id="ErrorDiv" style="text-align:center;color:red">
            @if(ViewBag.ErrorMessage!=null){
                @ViewBag.ErrorMessage
            }
        </div>
        <form id="registerForm" method="post" asp-action="Register" asp-controller="Home">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input class="form-control" aria-required="true" id="TeacherId" name="TeacherId" placeholder="Teacher ID" />
                <label>Teacher ID</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" aria-required="true" id="Teacher_Name" name="Teacher_Name" placeholder="Full Name" />
                <label>Full Name</label>
            </div>

            <div class="form-floating mb-3">
                <input class="form-control" aria-required="true" id="Password" name="Password" placeholder="Password" />
                <label>Password</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" aria-required="true" placeholder="Confirm Password" />
                <label>Confirm Password</label>
            </div>

            <div class="form-floating mb-3">
                <input class="form-control" aria-required="true" id="Admin_Password" placeholder="Password given by admin" />
                <label>Enter password given by admin</label>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" id="Designation" name="Designation" aria-required="true">
                    <option value="" disabled selected>Select Designation</option>
                    <option value="Assistant_Professor">Assistant Professor</option>
                    <option value="Associate_Professor">Associate Professor</option>
                    <option value="Professor">Professor</option>
                    <option value="Head_of_Department">Head of Department</option>
                    <option value="Dean">Dean</option>
                </select>
                <label>Select Designation</label>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
        
    </div>
</div>



<script>
    document.getElementById("registerForm").addEventListener("submit", function (event) {
        var TeacherId = document.getElementById("TeacherId").value;
        var Teacher_Name = document.getElementById("Teacher_Name").value;
        var Designation=document.getElementById("Designation").value;
        var password = document.getElementById("Password").value;
        var confirmPassword = document.getElementById("ConfirmPassword").value;
        var adminPassword=document.getElementById("Admin_Password").value;
        var errorDiv = document.getElementById("ErrorDiv");

        if(TeacherId=="" || Teacher_Name=="" || password=="" || Designation=="" || adminPassword==""){
            errorDiv.textContent = "All fields are mandatory";
            event.preventDefault(); 
        }
        else if (password !== confirmPassword) {
            errorDiv.textContent = "Passwords do not match!";
            event.preventDefault(); 
        }
    });
</script>

